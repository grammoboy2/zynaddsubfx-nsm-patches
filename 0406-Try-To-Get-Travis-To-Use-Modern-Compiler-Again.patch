From: fundamental <mark.d.mccurry@gmail.com>
Date: Tue, 31 Mar 2015 17:31:26 -0400
Subject: [PATCH 0406/1936] Try To Get Travis To Use Modern Compiler Again...

---
 .travis.yml | 11 +++++------
 1 file changed, 5 insertions(+), 6 deletions(-)

diff --git a/.travis.yml b/.travis.yml
index aeb8de26..f3017718 100644
--- a/.travis.yml
+++ b/.travis.yml
@@ -4,12 +4,11 @@ compiler:
     - gcc
 
 before_install:
-    - if [ "$CXX" == "g++" ]; then sudo add-apt-repository -y ppa:ubuntu-toolchain-r/test; fi
-
-install:
-    - if [ "$CXX" == "g++" ]; then sudo apt-get install -qq g++-4.8; fi
-    - if [ "$CXX" == "g++" ]; then sudo update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-4.8 50; fi
-    - sudo apt-get update && sudo apt-get install zlib1g-dev libmxml-dev libfftw3-dev liblo-dev
+    - sudo add-apt-repository -y ppa:ubuntu-toolchain-r/test
+    - sudo apt-get -qq update
+    - sudo apt-get -qq install g++-4.8
+    - sudo update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-4.8 90
+    - sudo apt-get install zlib1g-dev libmxml-dev libfftw3-dev liblo-dev
 
 script:
     - mkdir build && cd build
