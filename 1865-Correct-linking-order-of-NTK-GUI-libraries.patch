Subject: [PATCH 1865/1936] Correct linking order of NTK GUI libraries

Modification proposed by Stazed on:
https://github.com/zynaddsubfx/zynaddsubfx/issues/214
---
 src/CMakeLists.txt    | 2 +-
 src/UI/CMakeLists.txt | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/CMakeLists.txt b/src/CMakeLists.txt
index 8348df70..bed3c337 100644
--- a/src/CMakeLists.txt
+++ b/src/CMakeLists.txt
@@ -478,7 +478,7 @@ if(NtkGui)
 
 	message(STATUS ${NTK_LDFLAGS} ${NTK_IMAGES_LDFLAGS})
 
-	set(GUI_LIBRARIES zynaddsubfx_gui ${NTK_LIBRARIES} ${NTK_IMAGES_LIBRARIES} ${OPENGL_LIBRARIES})
+	set(GUI_LIBRARIES zynaddsubfx_gui ${NTK_IMAGES_LIBRARIES} ${NTK_LIBRARIES} ${OPENGL_LIBRARIES})
 
 	if(X11_FOUND AND X11_Xpm_FOUND)
 	     set(GUI_LIBRARIES ${GUI_LIBRARIES} ${X11_LIBRARIES} -lXpm)
diff --git a/src/UI/CMakeLists.txt b/src/UI/CMakeLists.txt
index 98b3d14c..ba977af8 100644
--- a/src/UI/CMakeLists.txt
+++ b/src/UI/CMakeLists.txt
@@ -88,7 +88,7 @@ add_dependencies(zynaddsubfx_gui_bridge zynaddsubfx_gui)
 
 
 if(NtkGui)
-  target_link_libraries(zynaddsubfx_gui ${NTK_LIBRARIES} ${NTK_IMAGES_LIBRARIES})
+  target_link_libraries(zynaddsubfx_gui ${NTK_IMAGES_LIBRARIES} ${NTK_LIBRARIES})
 endif(NtkGui)
 
 if(FltkGui)
