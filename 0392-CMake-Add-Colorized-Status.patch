+
+macro(package_status foundvar pkg state color)
+    if(${foundvar})
+        message(STATUS "${pkg} -- ${Green}${state}${ColorReset}")
+    else()
+        message(STATUS "${pkg} -- ${color}NOT ${state}${ColorReset}")
+    endif()
+endmacro()
