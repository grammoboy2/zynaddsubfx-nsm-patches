diff --git a/src/Misc/Allocator.cpp b/src/Misc/Allocator.cpp
index 907c9808..6a7f59fd 100644
--- a/src/Misc/Allocator.cpp
+++ b/src/Misc/Allocator.cpp
@@ -36,7 +36,7 @@ struct AllocatorImpl
